      int location = ( ( row * ieta ) + ( core * width ) + tyle );

      Tile *addthis = &_tiles.at(location);
      //ELEMENT:  "addthis" needs to be a pointer to _tiles.at(location) 
      //ADD ELEMENT "addthis" TO:  vector<Tile> TileColumn(core)

    }
  }
}


